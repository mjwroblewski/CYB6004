	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }


"Add a shebang": {
	"scope": "sh",
   	"prefix": "shebang", 
   	"body": [ 
   		"#!/bin/bash",
   ], 
   "description": "Add shebang to script" 
   
} 

"Add Case Statement": {
	"scope": "sh",
	"prefix": "case",
	"body": [
		"case $var in",
			" )",
				"# code if match",
				";;",
			" )",
				"# code if match",
				";;",
			" )",
				"# code if match"
				";;",
			"*) #default case",
				"# code if default case",
				";;",
			"esac",
	],
	"description": "Adds a Case Statement Structure"
}

"User Prompt": {
	"scope": "sh",
	"prefix": "promptuser",
	"body": [
		"read -p ': ' var",
	],
	"description": "Adds User Prompt"
}

"Add if and/or else Test": {
	"scope": "sh",
	"prefix": "andorelse",
	"body": [
		"if [[  ]] && ( [[ or ]] || [[ or ]] ); then",
			"# code if true",
		"else",
			"# code if false",
		"fi",
	],
	"description": "Adds IF and/or ELSE statement"
}

"Add a For Loop": {
	"scope": "sh",
	"prefix": ["for", "for-const"],
	"body": ["for (const ${2:element} of ${1:array}) {", "\t$0", "}",
],
	"description": "Adds a for loop"
}

"Make text colour black": {
	"scope": "sh",
	"prefix": "ccblack",
	"body": [
		echo -e "\033[30m <text> \e[0m"
	],
	"description": "Make text colour black"
}

